<p id="notice"><%= notice %></p>

<h1>Player In Leagues</h1>

<table>
  <thead>
    <tr>
      <th>Player</th>
      <th>League</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @player_in_leagues.each do |player_in_league| %>
      <tr>
        <td><%= player_in_league.player.firstname %></td>
        <td><%= player_in_league.league.name %></td>
        <td><%= link_to 'Show', player_in_league %></td>
        <% if admin_signed_in? %>
          <td><%= link_to 'Edit', edit_player_in_league_path(player_in_league) %></td>
          <td><%= link_to 'Destroy', player_in_league, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

